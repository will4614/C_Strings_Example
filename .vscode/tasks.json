{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "runMake",  // matches preLaunchTask in launch.json
      "command": "/usr/bin/make",
      "args": [ ],
      "options": {
          "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
          "$gcc"
      ],
      "group": {
          "kind": "build",
          "isDefault": true
      },
      "detail": "Task generated by chadd."
  },
  {
    "label": "clean",
    "type": "shell",
    "command": "make",
    "args": [
        "clean"
        ]
        ,
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "problemMatcher": [
        "$gcc"
      ]
   },
   {
    "label": "printToPDF",
    "type": "shell",
    "command": "make printAll",
    "group": {
        "kind": "none"
    },
    "problemMatcher": []
    }, 
    {
        "label": "valgrind",
        "type": "shell",
        "command": "make valgrind",
        "group": {
            "kind": "none"
        },
        "problemMatcher": []
        }, 
    
  ]
  
}
